{% extends 'admin/layout.njk' %};
{% block content %}
<div class="content">
<div class="header flex">
        <h1>Gerenciar Receitas</h1>
        <a class="button h-40" href="admin/create">Criar Receita</a>
    </div>
<div class="cards">
    {% for recipe in recipes %}
    <div class="card">
        <div class="image">
            <img src="{{recipe.recipe_image}}" alt="{{recipe.name}}">
        </div>
        <div class="content-card">
            <div class="title">{{recipe.name}}</div>
            <div class="author"><p>por {{recipe.author}}</p></div>
            <div class="link">
                <a href="/admin/{{recipe.id}}">Visualizar</a>
            </div>
        </div>
    </div>
    {% endfor %}
</div>
</div>
{% endblock content %}