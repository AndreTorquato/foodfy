{% extends 'admin/session/layout.njk' %} 
{% block head %}
<title>Esqueci minha senha</title>
{% endblock head %}
{% block content %}
{%  include "parts/message.njk" %}
<form action="/admin/reset-password" method="post">
  <div class="form-build">
    <p class="title">Nova senha</p>
    <p class="label">Email</p>
    <input 
    type="email"
    name="email"
    placeholder="Digite seu email"
    onblur="Validate.apply(this, 'isEmail')"
    value="{{user.email}}"
    />
    <p class="label">Nova Senha</p>
    <input 
    type="password"
    name="password"
    placeholder="Digite sua nova senha"
    />
    <p class="label">Repetir Senha</p>
    <input 
    type="password" 
    name="passwordRepeat"  
    placeholder="Repita a nova senha"
    />
  <input type="hidden" name="token" value="{{token}}" />
    <div class="buttons">
      <a href="/" class="forgot"></a
      ><button type="submit">Nova Senha</button>
    </div>
  </div>
  
</form>
{% endblock content %}