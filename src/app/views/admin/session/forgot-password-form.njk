{% extends 'admin/session/layout.njk' %} 
{% block head %}
<title>Esqueci minha senha</title>
{% endblock head %}
{% block content %}
<form action="/admin/login" method="post">
  <div class="form-build">
    <p class="title">Nova senha</p>
    <p class="label">Email</p>
    <input type="email" name="email" placeholder="Digite seu email" onblur="Validate.apply(this, 'isEmail')"/>
    <p class="label">Nova Senha</p>
    <input type="password" name="password"  placeholder="Digite sua nova senha"/>
    <p class="label">Repetir Senha</p>
    <input type="password" name="passwordRepite"  placeholder="Repita a nova senha"/>
    <div class="buttons">
      <a href="/" class="forgot"></a
      ><button type="submit">Nova Senha</button>
    </div>
  </div>
</form>
{% endblock content %}