{% extends 'admin/session/layout.njk' %} 
{% block head %}
<title>Esqueci minha senha</title>
{% endblock head %}
{% block content %}
{% include "parts/message.njk" %}
<form action="/admin/forgot-password" method="post">
  <div class="form-build">
    <p class="title">Esqueceu a senha?</p>
    <p class="label">Email</p>
    <input 
    type="email"
    name="email"
    placeholder="Digite seu email"
    onblur="Validate.apply(this, 'isEmail')"
    />
    <div class="buttons">
      <a href="" class="forgot"></a
      ><button type="submit">Acessar</button>
    </div>
  </div>
</form>
{% endblock content %}