{% extends 'admin/layout.njk' %} 
{% block header %}
<title>{{ chef.name }}</title>
<link rel="stylesheet" href="../../../styles/chefs.css" />
{% endblock header %} {% block content %}
<div class="show">
  <div class="header">
    <h1>Chef: {{ chef.name }}</h1>
    <a class="button" href="{{ chef.id }}/edit">Editar Chef</a>
  </div>

  <div class="info chef">
    <div class="inf">
      <img class="profile" src="{{ photo.src }}" alt="{{ photo.name }}" />
      <h1>{{ chef.name }}</h1>
      <p class="author">{{ chef.qtd_recipes }} Receitas</p>
    </div>
    <div class="chef-info">
      <h2>Receitas</h2>
      <div class="cards-show">
        {% for recipe in recipes %}
        <div class="card">
          <div class="image">
            {% for image in images %}
            {% if image.recipe_id == recipe.id %}
            <img src="{{ image.src }}" alt="{{ image.name }}" />
            {% endif %}
            
            {% endfor %}
            
          </div>
          <div class="content-card">
            <div class="title">{{ recipe.title }}</div>
            <div class="author">
              <p>por {{ recipe.author }}</p>
            </div>
            <div class="link">
              <a href="/admin/recipes/{{ recipe.id }}">Visualizar</a>
            </div>
          </div>
        </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>
{% endblock content %}
