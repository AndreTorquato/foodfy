{% extends 'admin/layout.njk' %};
{% block header %}
<title>Chefs</title>
<link rel="stylesheet" href="../../../styles/chefs.css">
{% endblock header %}
{% block content %}
<div class="content">
<div class="header flex">
        <h1>Gerenciar Chefs</h1>
        <a class="button h-40" href="chefs/create">Criar Novo Chef</a>
    </div>
<div class="cards chef">
    {% for chef in chefs %}
    
    <div class="card chef">
        <div class="image">
            <img src="{{chef.avatar_url}}" alt="{{chef.name}}">
        </div>
        <div class="content-card">
            <div class="title">{{chef.name}}</div>
            <div class="link">
                <a href="/admin/chefs/{{chef.id}}">Visualizar</a>
            </div>
        </div>
    </div>
    {% endfor %}
</div>
</div>
{% endblock content %}